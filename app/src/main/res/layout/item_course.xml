<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_course_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium">

        <!-- Course Icon -->
        <ImageView
            android:id="@+id/iv_course_icon"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_medium"
            android:src="@android:drawable/ic_menu_agenda"
            android:contentDescription="Course Icon"
            app:tint="@color/primary_color" />

        <!-- Course Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Course Name -->
            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Java Programlama Temelleri" />

            <!-- Course Description -->
            <TextView
                android:id="@+id/tv_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Java programlama dilinin temel kavramları ve nesne yönelimli programlama" />

            <!-- Divider -->
            <View
                android:id="@+id/v_course_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/divider_color" />

            <!-- Course Instructor -->
            <TextView
                android:id="@+id/tv_course_instructor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center_vertical"
                tools:text="Eğitmen: Dr. Mehmet Özkan" />

            <!-- Course Schedule -->
            <TextView
                android:id="@+id/tv_course_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center_vertical"
                tools:text="Program: Hafta içi Akşam" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
